

    {{#if contact}}
        {{#each contact as |cont|}}
        <div class="card-body my-3 infoCard rounded-3">
            <h5 class="card-title">Name: {{ cont.firstName }} {{ cont.lastName }}</h5>
            <p class="card-text">Number: {{cont.number}}</p>
            <p class="card-text">Relation: {{cont.relation}}</p>

            <div class="mt-2">
    {{!-- BUTTON: Edit contact info --}}
                    <button type="button" data-bs-toggle="modal" data-bs-target="#editContactModal" dataname="{{ cont.id }}" class="btn btn-dark">
                        Edit Contact Info
                    </button>
    {{!-- BUTTON: Delete contact info --}}
                    <button class="btn btn-danger" data-contactId="#{{ cont.id }}" data-bs-toggle="modal" id="deleteContactBtn">Delete Contact</button>
            </div>
            <!-- Edit Contact Modal -->
            <div class="modal fade" id="editContactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEvent" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabelEvent">Edit Contact Info</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div ="container-fluid">
                                <div class="input-group mb-3">
                                    <span class="input-group-text col-5">First Name</span>
                                    <input type="text" aria-label="First name" class="form-control" value="{{ cont.firstName }}" id="editFirstName">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text col-5">Last Name</span>
                                    <input type="text" aria-label="Last name" class="form-control" value="{{ cont.lastName }}" id="editLastName">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text col-5">Number</span>
                                    <input type="text" aria-label="Number" class="form-control" value="{{ cont.number }}" id="editNumber">
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text col-5" id="inputGroup-sizing-default">Relation</span>
                                    <input type="text" aria-label="Relation" class="form-control" value="{{ cont.relation }}" id="editRelation">
                                </div>
                                <div class="input-group mb-3">
                                    <input type="hidden" aria-label="First name" class="form-control" value="{{ cont.id }}" id="editContactId">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="editContactBtn" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </div>
            </div> 
        </div>

    {{!-- {{/each}} --}}
    {{!-- <div class="mt-3">
        <button class="btn btn-warning align-items-end mt-2">Add Contact Info</button>
    </div> --}}

        {{/each}}
    
    {{else}}
        <h5 class="card-title">Name:</h5>
        <p class="card-text py-3"></p>
        <h5 class="card-title">Number:</h5>
        <p class="card-text py-3"></p>
        <h5 class="card-title">Relation:</h5>
        <p class="card-text py-3"></p>

    {{/if}}
        {{!-- BUTTON: Add contact info --}}
        <div class="mt-3">
            <button type="button" data-bs-toggle="modal" data-bs-target="#addContactModal" class="btn btn-secondary">
                Add Contact Info
            </button>
        </div>
</div>

<!-- Add Contact Modal -->
<div class="modal fade" id="addContactModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEvent" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabelEvent">Add Contact Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div ="container-fluid">
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5">First Name</span>
                        <input type="text" aria-label="First name" class="form-control" value="{{ contact.firstName }}" id="firstName">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5">Last Name</span>
                        <input type="text" aria-label="Last name" class="form-control" value="{{ contact.lastName }}" id="lastName">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5">Number</span>
                        <input type="text" aria-label="First name" class="form-control" value="{{ contact.number }}" id="number">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5" id="inputGroup-sizing-default">Relation</span>
                        <input type="text" aria-label="First name" class="form-control" value="{{ contact.relation }}" id="relation">
                    </div>
                    <div class="input-group mb-3">
                        <input type="hidden" aria-label="First name" class="form-control" value="{{ contact.id }}" id="contactIdModal">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="addContactBtn" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>