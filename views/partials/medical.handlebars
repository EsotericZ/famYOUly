<div class="card-body">
    {{#each medicalInfo as |medical|}}
    {{!-- Medications --}}
    {{#if medications}}
    <h5 class="card-title">Medications:</h5>
    <li>
        <p>{{ medical.medications }}</p>
        <p class="card-text">Example text</p>
    </li>
    {{/if}}
    {{!-- Allergies --}}
    {{#if allergies}}
    <h5 class="card-title">Allergies:</h5>
    <li>
        <p>{{ medical.allergies }}</p>
        <p class="card-text">Example text</p>
    </li>
    {{/if}}
    {{!-- Health Insurance --}}
    {{#if healthInsurance}}
    <h5 class="card-title">Health Insurance:</h5>
    <li>
        <p class="card-text">{{ medical.healthInsurance }}</p>
        <p class="card-text">Example text</p>
    </li>
    {{/if}}
    {{/each}}

    {{!-- BUTTON: Add medical info --}}
    <div class="mt-3">
        <button class="btn btn-warning align-items-end mt-2">Add Medical Info</button>
    </div>
</div>