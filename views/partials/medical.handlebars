<!-- Add Meidcal Modal -->
<div class="modal fade" id="medicalModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEvent" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabelEvent">Edit Medical Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div ="container-fluid">
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5">Medications</span>
                        <input type="text" aria-label="First name" class="form-control" id="medications">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5">Allergies</span>
                        <input type="text" aria-label="First name" class="form-control" id="allergies">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text col-5" id="inputGroup-sizing-default">Health Insurance</span>
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" id="healthInsurance">
                    </div>
                    <div class="input-group mb-3">
                        <input type="hidden" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="{{ childId.id }}" id="childIdModal">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="newMedBtn" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>