{{> navbar}}

<h1 class="text-center my-3">Information</h1>

<div class="col-lg-12 p-2">
    <div class="container">
        <div class="row">
            {{!-- {{#each children as |child|}} --}}
            <div class="col-6">
                <div class="card mt-2">
                    <div class="card-body mt-3">
                        <h3 class="card-title">{{ firstName }} {{ lastName }}:</h3>
                        <div>
                            <button class="btn btn-warning align-items-end mt-2">Add Medical Info</button>
                        </div>
                        {{!-- medical --}}
                        <a class="btn btn-primary my-5" data-bs-toggle="collapse" href="#medicalInfo" role="button"
                            aria-expanded="false" aria-controls="medicalInfo">
                            Medical Info
                            {{!-- {{> medical}} --}}
                        </a>
                        {{!-- contact --}}
                        <a class="btn btn-primary my-5" data-bs-toggle="collapse" href="#contactInfo" role="button"
                            aria-expanded="false" aria-controls="contactInfo">
                            Contact Info
                            {{!-- {{> contact}} --}}
                        </a>
                        {{!-- list --}}
                        <a class="btn btn-primary my-5" data-bs-toggle="collapse" href="#listInfo" role="button"
                            aria-expanded="false" aria-controls="listInfo">
                            Don't Forget List
                            {{!-- {{> list}} --}}
                        </a>
                    </div>
                    {{!-- {{/each}} --}}
                </div>
                <div class="collapse" id="medicalInfo">
                    <div class="card card-body">
                        {{> medical}}
                    </div>
                </div>
                <div class="collapse" id="contactInfo">
                    <div class="card card-body">
                        Example contact placeholder text
                        {{> contact}}
                    </div>
                </div>
                <div class="collapse" id="listInfo">
                    <div class="card card-body">
                        Example list placeholder text
                        {{> list}}
                    </div>
                </div>
                </div>
            </div>
        </div>