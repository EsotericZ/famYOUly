{{> navbar}}

<h3 class="text-center my-3">Information</h3>

<div class="col-lg-12 p-2">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mt-2">
                    <div class="card-body bg-root">
                        <h3 class="card-title text-start" id="childInfo" data-childId={{childId.id}}>{{ childId.firstName }} {{ childId.lastName }}:</h3>
                        {{!-- medical --}}
                        <a class="btn btn-dark my-5" id="medicalInfo" data-bs-toggle="collapse" href="#medicalInfo" role="button"
                            aria-expanded="false" aria-controls="medicalInfo">
                            Medical Info
                        </a>
                        {{!-- contact --}}
                        <a class="btn btn-dark my-5" id="contactInfo" data-bs-toggle="collapse" href="#contactInfo" role="button"
                            aria-expanded="false" aria-controls="contactInfo">
                            Contact Info
                        </a>
                        {{!-- list --}}
                        <a class="btn btn-dark my-5" id="listInfo" data-bs-toggle="collapse" href="#listInfo" role="button"
                            aria-expanded="false" aria-controls="listInfo">
                            Don't Forget List
                        </a>
                    </div>
                </div>
                <div class="collapse" id="medicalInfo">
                    <div class="card card-body infoModal">
                        {{> medical}}
                    </div>
                </div>
                <div class="collapse" id="contactInfo">
                    <div class="card card-body infoModal">
                        {{> contact}}
                    {{!-- </div> --}}
                </div>
                <div class="collapse" id="listInfo">
                    <div class="card card-body infoModal">
                        {{> list}}
                    </div>
                </div>
            </div>
        </div>
    </div>